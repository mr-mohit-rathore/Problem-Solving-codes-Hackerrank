 public static void staircase(int n) {
    // Write your code here
    
    int i,j,k;
        
        for(i=1;i<=n;i++){
            for(k=1;k<(n-i)+1;k++){
                System.out.print(" ");
            }
            
            for(j=1;j<=i;j++){
                System.out.print("#");
            }
            System.out.println();
        }
    }
    
    // question link : https://www.hackerrank.com/challenges/staircase/problem
